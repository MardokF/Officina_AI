# ============================================
# OFFICINA AI ASSISTANT - Environment Variables
# ============================================
# Copia questo file in .env e compila con i tuoi valori

# ============================================
# LLM PROVIDER (scegli uno)
# ============================================

# Opzione 1: Anthropic Claude (Raccomandato)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Opzione 2: OpenAI GPT
# OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# VECTOR DATABASE - Pinecone
# ============================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your-environment  # es: gcp-starter, us-east-1-aws
PINECONE_INDEX_NAME=officina-manuali

# ============================================
# MODEL CONFIGURATION
# ============================================

# LLM Provider (anthropic o openai)
LLM_PROVIDER=anthropic

# Model names
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
OPENAI_MODEL=gpt-4-turbo-preview

# Temperature (0.0 = più preciso, 1.0 = più creativo)
LLM_TEMPERATURE=0.0

# Max tokens per risposta
MAX_TOKENS=2000

# ============================================
# RAG CONFIGURATION
# ============================================

# Chunking parameters
CHUNK_SIZE=1500
CHUNK_OVERLAP=300

# Retrieval parameters
RETRIEVAL_K=5  # Numero di chunks da recuperare
SIMILARITY_THRESHOLD=0.7

# Hybrid search
ENABLE_HYBRID_SEARCH=false
HYBRID_KEYWORD_WEIGHT=0.3
HYBRID_SEMANTIC_WEIGHT=0.7

# ============================================
# DOCUMENT PROCESSING
# ============================================

# Path ai manuali
MANUALS_PATH=./data/manuali

# Abilita OCR per PDF scansionati
ENABLE_OCR=true
OCR_LANGUAGE=ita

# Estrazione tabelle
EXTRACT_TABLES=true

# ============================================
# APPLICATION SETTINGS
# ============================================

# Debug mode
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit
STREAMLIT_PORT=8501

# ============================================
# OPTIONAL: ADVANCED FEATURES
# ============================================

# Vision API per riconoscimento immagini parti
ENABLE_VISION=false
VISION_MODEL=claude-sonnet-4-5-20250929

# Conversation memory
ENABLE_MEMORY=true
MEMORY_TYPE=buffer  # buffer, summary, or window

# Cache per risposte
ENABLE_CACHE=true
CACHE_TTL=3600  # secondi

# ============================================
# MONITORING & ANALYTICS
# ============================================

# Langsmith (optional - per tracing)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your_langsmith_key
# LANGCHAIN_PROJECT=officina-ai

# Sentry (optional - per error tracking)
# SENTRY_DSN=your_sentry_dsn

# ============================================
# SECURITY
# ============================================

# API Key per proteggere l'endpoint (opzionale)
# API_SECRET_KEY=your_secret_key_here

# CORS origins (separati da virgola)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
